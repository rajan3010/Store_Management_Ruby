<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

<h2 class="title is-2" >Edit <%@user.name %></h2>

        <%= simple_form_for(@user) do |f| %>
          <%= f.error_notification %>

  <div class="form-inputs">
    <div class="field">
      <div class="control">
    <%= f.input :name, required: false, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }%>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :email, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }%>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :age,
                    required: true,
                    autofocus: true,
                    input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }%>
      </div>
    </div>

    <div class="form-inputs">
      <div class="field">
        <div class="control">
          <%= f.input :phone, required: false, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }%>
        </div>
      </div>
      <div class="form-inputs">
        <div class="field">
          <div class="control">
            <%= f.input :address, required: false, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :card_name,
                        required: true,
                        autofocus: true,
                        input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :card_no,
                        required: true,
                        autofocus: true,
                        input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :card_exp,
                        required: true,
                        autofocus: true,
                        input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :cvv,
                        required: true,
                        autofocus: true,
                        input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }%>
          </div>
        </div>

      </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class:"button is-warning" %>
  </div>
<% end %>

      </div>
    </div>
  </div>
    </div>
  </div>
</section>