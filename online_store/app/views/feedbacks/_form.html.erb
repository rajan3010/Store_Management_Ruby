<%= simple_form_for(@feedback) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="field">
      <div class="control">
        <%= f.text_area :message, size: "50x15", required: true, autofocus: true, input_html: { class: "textarea"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

  </div>
  <div class="field">
  <div class="form-actions">
    <%= f.button :submit, class:"button is-dark" %>
    <%if user_signed_in? %>
    <%if can? :read,@feedback %>
    <%= link_to 'View feedback', feedbacks_show_path, class:"button is-rounded" %>
      <%end %>
      <%end %>
  </div>
  </div>
<% end %>