<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

<h2 class="title is-2" >Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="field">
      <div class="control">
    <%= f.input :name, required: false, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }%>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :email, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }%>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :age,
                    required: true,
                    autofocus: true,
                    input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }%>
      </div>
    </div>

    <div class="field">
      <div class="control">
    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
    <%= f.input :password_confirmation,
                required: false,
                input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>
   <!-- <div class="field">
      <div class="control">
    <%#= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>-->
      <div class="field">
        <div class="control">
          <%= f.input :phone, required: false, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }%>
        </div>
      </div>
      <div class="form-inputs">
        <div class="field">
          <div class="control">
            <%= f.input :address, required: false, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :card_name,
                        required: true,
                        autofocus: true,
                        input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :card_no,
                        required: true,
                        autofocus: true,
                        input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :card_exp,
                        required: true,
                        autofocus: true,
                        input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :cvv,
                        required: true,
                        autofocus: true,
                        input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }%>
          </div>
        </div>


      </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class:"button is-warning" %>
  </div>
<% end %>

  <hr />
  <h3 class="title is-5">Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
      </div>
    </div>
    </div>
  </div>
</section>