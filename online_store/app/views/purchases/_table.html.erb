<table class="table is-striped is-fullwidth is-hoverable">
  <thead>
  <tr>
    <th><abbr title="Name">Purchase</abbr></th>
    <th>Total Cost</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
  <%@purchases.each.with_index do |f,index| %>
      <tr>
        <td><%= link_to "Purchase #{index}", purchaselist_path(f) %></td>
        <td>$ <%=f.tax_cost %></td>
        <%if purchase_pending?(f) %>
          <td>Pending</td>
          <%else %>
          <td></td>
          <%end %>
      </tr>
  <%end %>
  </tbody>
</table>